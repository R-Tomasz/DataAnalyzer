<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DataAnalyzer.gui.MainViewController">
    <top>
        <HBox style="-fx-padding: 5px;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Stan">
                    <HBox.margin>
                        <Insets left="10.0" top="5.0" />
                    </HBox.margin>
                </Label>
                <TextField id="stateTextField" fx:id="stateField">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </TextField>
                <Button id="submitButton" fx:id="submitButton" mnemonicParsing="false" onAction="#handleStateClick" text="Wyświetl">
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </Button>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </BorderPane.margin>
        </HBox>
    </top>
    <left>
        <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-padding: 5px;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Stany" />
                <ListView id="statesView" fx:id="statesView" onMouseClicked="#handleStatesListClicked" />
            </children>
        </VBox>
    </left>
    <center>
        <VBox style="-fx-padding: 5;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Wynik" />
                <TableView id="resultView" fx:id="resultView" style="-fx-padding: 10px;">
                    <placeholder>
                        <Label text="Wpisz/wybierz prawidłowy kod stanu lub nie wpisuj nic i kliknij przycisk"/>
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="cityName" text="Miasto" />
                        <TableColumn fx:id="cityFips" text="Kod FIPS" />
                        <TableColumn fx:id="stateShort" text="Stan" />
                        <TableColumn fx:id="populationCount" text="Populacja" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
   <bottom>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label id="hintLabel" fx:id="hintLabel" text="Wyświetl sobie jakieś dane">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            <Label id="sumPopulationLabel" fx:id="sumPopulationLabel">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </bottom>
</BorderPane>
